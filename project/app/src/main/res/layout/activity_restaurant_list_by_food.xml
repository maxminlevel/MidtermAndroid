<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"

    tools:context=".Activity.RestaurantListByFoodActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/bun_pho_cat"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="31dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phở bò"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:textSize="24dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:src="@drawable/description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:textSize="16dp"
                    android:text="Mô tả:"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/foodDescription"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/newsMoreTextSize"
                android:text="Nước dùng mùi bò hoà quyện cùng rau thơm tạo nên hương vị khó cưỡng. Thịt bò tái mềm dẻo chấm với tương, hoà tan ngay khi cho vào miệng" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="45px"
                    android:layout_height="60px"
                    android:src="@drawable/rating_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:text="Đánh giá trung bình"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating_food_res_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="4.6"

                    android:textColor="@color/f_hot" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"

                    android:src="@drawable/ic_baseline_star_24" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/f_hot"
        android:textSize="20dp"
        android:paddingLeft="30dp"
        android:text="Danh sách cửa hàng"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRes_Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingBottom="80dp"
        />





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="90dp"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/card_background"
                        android:elevation="3dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="5dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/security"
                            tools:srcCompat="@drawable/security"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tài khoản và bảo mật "
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/securityBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/orange_button_background"
                            android:gravity="right"
                            android:paddingHorizontal="10dp"
                            android:text=">"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/card_background"
                        android:elevation="3dp"
                        android:layout_marginHorizontal="5dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/language"
                            tools:srcCompat="@drawable/language"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngôn ngữ và khu vực"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/languageBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/orange_button_background"
                            android:gravity="right"
                            android:paddingHorizontal="10dp"
                            android:text=">"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/card_background"
                        android:elevation="3dp"
                        android:layout_marginHorizontal="5dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/notification"
                            tools:srcCompat="@drawable/notification"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý thông báo"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/notificationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/orange_button_background"
                            android:gravity="right"
                            android:paddingHorizontal="10dp"
                            android:text=">"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/card_background"
                        android:elevation="3dp"
                        android:layout_marginHorizontal="5dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/support"
                            tools:srcCompat="@drawable/support"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hỗ trợ khách hàng"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/supportBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/orange_button_background"
                            android:gravity="right"
                            android:paddingHorizontal="10dp"
                            android:text=">"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/bottom_navigation"
        android:id="@+id/layoutInclude"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
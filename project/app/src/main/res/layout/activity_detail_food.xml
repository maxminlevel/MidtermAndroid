<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="167dp"
            android:layout_height="151dp"
            app:srcCompat="@drawable/bun_pho_cat"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="31dp" />

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="185dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phở bò"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:textSize="24dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:src="@drawable/ingredients"/>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:textSize="16dp"
                    android:text="Thành phần:"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/newsMoreTextSize"
                android:text="Thịt bò, rau thơm, hành lá, cọng phở, hành phi, hành củ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:src="@drawable/description" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:textSize="16dp"
                    android:text="Mô tả:"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/newsMoreTextSize"
                android:text="Nước dùng mùi bò hoà quyện cùng rau thơm tạo nên hương vị khó cưỡng. Thịt bò tái mềm dẻo chấm với tương, hoà tan ngay khi cho vào miệng" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/f_hot"
        android:textSize="20dp"
        android:paddingLeft="30dp"
        android:text="Danh sách cửa hàng"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_background_restaurant"
        android:layout_marginBottom="5dp"
        >

        <TextView

            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Phở Danh"
            android:textColor="@color/purple_500"
            android:textAlignment="center"
             android:layout_width="0dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Giá thành:"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="25.000đ"

                android:textColor="@color/f_hot" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="@drawable/card_background_restaurant"

        >

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Phở Danh"
            android:textColor="@color/purple_500"
            android:textAlignment="center"
            android:layout_width="0dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Giá thành:"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="25.000đ"

                android:textColor="@color/f_hot" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="202dp"
        android:background="@drawable/card_background_restaurant"

        >

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Phở Danh"
            android:textColor="@color/purple_500"
            android:textAlignment="center"
            android:layout_width="0dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Giá thành:"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="25.000đ"

                android:textColor="@color/f_hot" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="202dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Phở Danh"
            android:textColor="@color/purple_500"
            android:textAlignment="center"
            android:layout_width="0dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"

                android:src="@drawable/ic_baseline_attach_money_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Giá thành:"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="25.000đ"

                android:textColor="@color/f_hot" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>